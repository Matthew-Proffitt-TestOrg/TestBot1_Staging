{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@org/types/*": [
        "packages/types/src/*"
      ],
      "@org/math/*": [
        "packages/math/src/*"
      ],
      "@org/risk/*": [
        "packages/risk/src/*"
      ],
      "@org/core-exec/*": [
        "packages/core-exec/src/*"
      ],
      "@org/adapters-evm/*": [
        "packages/adapters-evm/src/*"
      ],
      "@org/adapters-solana/*": [
        "packages/adapters-solana/src/*"
      ],
      "@org/sim/*": [
        "packages/sim/src/*"
      ],
      "@org/data/*": [
        "packages/data/src/*"
      ],
      "@org/sdk/*": [
        "packages/sdk/src/*"
      ]
    }
  }
}
